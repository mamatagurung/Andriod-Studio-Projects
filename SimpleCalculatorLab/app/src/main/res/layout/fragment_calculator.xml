<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/display_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="end"
        android:text="0"
        android:padding="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- Number Buttons -->
        <Button
            android:id="@+id/btn_7"
            style="@style/CalculatorButton"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/CalculatorButton"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/CalculatorButton"
            android:text="9" />

        <Button
            android:id="@+id/btn_4"
            style="@style/CalculatorButton"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/CalculatorButton"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/CalculatorButton"
            android:text="6" />

        <Button
            android:id="@+id/btn_1"
            style="@style/CalculatorButton"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/CalculatorButton"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/CalculatorButton"
            android:text="3" />

        <Button
            android:id="@+id/btn_0"
            style="@style/CalculatorButton"
            android:text="0"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="2" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/CalculatorButton"
            android:text="." />

        <Button
            android:id="@+id/btn_equals"
            style="@style/CalculatorButton"
            android:text="="
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="2" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/CalculatorButton"
            android:text="+" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/CalculatorButton"
            android:text="-" />

        <Button
            android:id="@+id/btn_multiply"
            style="@style/CalculatorButton"
            android:text="*" />

        <Button
            android:id="@+id/btn_divide"
            style="@style/CalculatorButton"
            android:text="/" />

        <Button
            android:id="@+id/btn_clear"
            style="@style/CalculatorButton"
            android:text="C" />

    </GridLayout>
</LinearLayout>
